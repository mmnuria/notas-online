<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://JAVA.sun.com/xml/ns/javaee"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
  id="WebApp_ID" version="2.5">
  <display-name>notas-online</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>Log0</filter-name> <!-- mandatory -->
    <filter-class>filters.Log0</filter-class> <!-- mandatory -->
  </filter>
  <filter-mapping>
    <filter-name>Log0</filter-name> <!-- mandatory -->
    <url-pattern>/*</url-pattern> <!-- either url-pattern or servlet-name is mandatory -->
  </filter-mapping>
  <filter>
    <filter-name>Log1</filter-name> <!-- mandatory -->
    <filter-class>filters.Log1</filter-class> <!-- mandatory -->
  </filter>
  <filter-mapping>
    <filter-name>Log1</filter-name> <!-- mandatory -->
    <url-pattern>/*</url-pattern> <!-- either url-pattern or servlet-name is mandatory -->
  </filter-mapping>
  <filter>
    <filter-name>Log2</filter-name> <!-- mandatory -->
    <filter-class>filters.Log2</filter-class> <!-- mandatory -->
    <init-param>
      <param-name>log-file-path</param-name>
      <param-value>/var/log/notas-online/access.log</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>Log2</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <description></description>
    <display-name>Login</display-name>
    <servlet-name>Login</servlet-name>
    <servlet-class>Login</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
</web-app>